{
  "info": {
    "name": "TBMNC Tracker API",
    "description": "Complete API collection for TBMNC Customer Tracking System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "apiVersion",
      "value": "v1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "API Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/{{apiVersion}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "{{apiVersion}}"]
        }
      }
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/customers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "customers"]
            }
          }
        },
        {
          "name": "Get Customers (Filtered)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/customers?status=active&stage=2",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "customers"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                },
                {
                  "key": "stage",
                  "value": "2"
                }
              ]
            }
          }
        },
        {
          "name": "Get Customer by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/customers/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "customers", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "customer-1"
                }
              ]
            }
          }
        },
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyName\": \"Test Battery Corp\",\n  \"legalName\": \"Test Battery Corporation\",\n  \"taxId\": \"12-3456789\",\n  \"companySize\": \"medium\",\n  \"annualRevenue\": 5000000,\n  \"yearsInBusiness\": 5,\n  \"status\": \"pending\",\n  \"currentStage\": 1,\n  \"contactPerson\": \"John Doe\",\n  \"contactEmail\": \"john@testbattery.com\",\n  \"contactPhone\": \"+1-555-0100\",\n  \"tags\": [\"test\", \"battery\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/customers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "customers"]
            }
          }
        },
        {
          "name": "Update Customer",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"active\",\n  \"currentStage\": 2,\n  \"notes\": \"Updated via API\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/customers/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "customers", ":id"],
              "variable": [
