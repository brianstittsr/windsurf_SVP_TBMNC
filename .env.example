# Application
NODE_ENV=development
APP_NAME=TBMNC Tracker
APP_VERSION=1.0.0
PORT=3000

# Firebase
FIREBASE_PROJECT_ID=tbmnc-tracker
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json
FIREBASE_STORAGE_BUCKET=tbmnc-tracker.appspot.com
FIREBASE_EMULATOR=true

# Auth0
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.strategicvalue.com
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=tbmnc-tracker-documents
AWS_CLOUDFRONT_URL=https://your-cloudfront-url.cloudfront.net

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@strategicvalue.com
SENDGRID_FROM_NAME=Strategic Value Plus

# Frontend
VITE_API_URL=http://localhost:3000/api/v1
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=https://api.strategicvalue.com

# Monitoring
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Security
JWT_SECRET=your-jwt-secret-change-in-production
SESSION_SECRET=your-session-secret-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Services
# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_AI_MODEL=gemini-pro

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4

# AI Features Configuration
AI_ENABLED=true
AI_PROVIDER=openai
AI_TEMPERATURE=0.7
AI_MAX_RETRIES=3

# AI Feature Flags
AI_RISK_ASSESSMENT=true
AI_ASSIGNMENT_RECOMMENDATIONS=true
AI_TIMELINE_PREDICTIONS=true
AI_DOCUMENT_ANALYSIS=true
AI_SMART_ALERTS=true
AI_PMI_INSIGHTS=true
