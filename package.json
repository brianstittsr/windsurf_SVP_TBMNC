{
  "name": "tbmnc-tracker",
  "version": "1.0.0",
  "description": "Toyota Battery Manufacturing North Carolina Customer Tracking System",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "firebase:emulators": "firebase emulators:start",
    "firebase:init": "npm run firebase:init --workspace=packages/backend",
    "firebase:seed": "npm run firebase:seed --workspace=packages/backend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test:e2e --workspace=packages/frontend",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "setup:dev": "npm install && npm run firebase:init && npm run firebase:seed",
    "deploy:staging": "npm run build && firebase deploy --only hosting,firestore:rules,storage:rules --project staging",
    "deploy:production": "npm run build && firebase deploy --only hosting,firestore:rules,storage:rules --project production"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "firebase-tools": "^13.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
